a.v () 
{ 
    __T='a.v';
    _T=$1;
    if [[ ! -n $_T ]]; then
        : no parms given, assume base file;
        _T=$_ALP_/$_ALP_MOD.bash;
        vim $_T;
        . $_T;
        rm $_T;
    else
        : single function repl;
        : _T=$1.$$;
        _WD=$(pwd);
        : a.dir;
        : _T=$(a.fs $1);
        _T=$$.bash;
        a.f $1 > $_T;
        vim $_T;
        . $_T;
        rm $_T;
        cd $_WD;
    fi
}
